/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
  ::-webkit-scrollbar {
    width: 16px;
    height: 16px;
  }

  ::-webkit-scrollbar-track {
    border-radius: 100vh;
    background-color: #eaeaea;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-primary;
    border-radius: 100vh;
    border: 3px solid #eaeaea;
  }

  ::-webkit-scrollbar-thumb:hover {
    @apply bg-primary-focus;
  }
}
